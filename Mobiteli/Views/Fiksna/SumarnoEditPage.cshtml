@model Mobiteli.Models.PotrosnjaSumarnoFiksna

@{
    ViewBag.Title = "Ažuriranje potrošnje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <table>

        @Html.HiddenFor(model => model.id_sum)
        <tr>
        <td class="editor-label">
            Org. dio
        </td>
        <td class="editor-field">
            @ViewBag.korisnik
        </td>
        </tr><tr>
        <td class="editor-label">
             Broj telefona
        </td>
        <td class="editor-field">
            @ViewBag.broj
        </td>
        </tr><tr>
        <td class="editor-label">
            Godina
        </td>
        <td class="editor-field">
           @(Model.godina)
        </td>
        </tr><tr>
        <td class="editor-label">
            Mjesec
        </td>
        <td class="editor-field">
            @Model.mjesec
            </td>
        </tr><tr>
        <td class="editor-label">
            @Html.LabelFor(model => model.iznos)
        </td>
        <td class="editor-field">
            @Html.EditorFor(model => model.iznos)
            @Html.ValidationMessageFor(model => model.iznos)
        </td>
        </tr><tr>
        <td class="editor-label">
            Prethodni dug
        </td>
        <td class="editor-field">
            @Html.EditorFor(model => model.preth_dug)
            @Html.ValidationMessageFor(model => model.preth_dug)
        </td>
        </tr><tr>
        <td class="editor-label">
            Preplaćeno
        </td>
        <td class="editor-field">
            @Html.EditorFor(model => model.preplaceno)
            @Html.ValidationMessageFor(model => model.preplaceno)
        </td>
        </tr>

    </table> 
           <p>
            <input type="submit" value="Spremiti" />
        </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
