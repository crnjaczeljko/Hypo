@model Mobiteli.Models.Fiksna

@{
    ViewBag.Title = "Ažuriranje";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <table>

        @Html.HiddenFor(model => model.id_fiks)
          
        <tr>
            <td class="editor-label">
                Organizacijski dio
            </td>
            <td class="editor-field">
                @Html.DropDownList("id_od", String.Empty)
                @Html.ValidationMessageFor(model => model.id_od)
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                Operater
            </td>
            <td class="editor-field">
                @Html.DropDownList("id_oper", String.Empty)
                @Html.ValidationMessageFor(model => model.id_oper)
            </td>
        </tr>
        <tr>
            <td class="editor-label">
               Broju ugovora
            </td>
            <td class="editor-field">
                @Html.EditorFor(model => model.broj_ugovora)
                @Html.ValidationMessageFor(model => model.broj_ugovora)
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                Centrala Broj
            </td>
            <td class="editor-field">
                @Html.EditorFor(model => model.centrala_broj)
                @Html.ValidationMessageFor(model => model.centrala_broj)
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                Govorna usluga
            </td>
            <td class="editor-field">
                @Html.EditorFor(model => model.voice)
                @Html.ValidationMessageFor(model => model.voice)
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                Data usluga
            </td>
            <td class="editor-field">
                @Html.EditorFor(model => model.data)
                @Html.ValidationMessageFor(model => model.data)
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                aktiviran
            </td>
            <td class="editor-field">
                @Html.EditorFor(model => model.dat_akt)
                @Html.ValidationMessageFor(model => model.dat_akt)
            </td>
        </tr>
        <tr>
            <td class="editor-label">
                Isključen
            </td>
            <td class="editor-field">
                @Html.EditorFor(model => model.dat_deakt)
                @Html.ValidationMessageFor(model => model.dat_deakt)
            </td>
        </tr>

    </table>
        <p>
            <input type="submit" value="Spremiti" />
        </p>
}

