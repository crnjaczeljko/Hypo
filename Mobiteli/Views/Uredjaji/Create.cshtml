@model Mobiteli.Models.Uredjaji

@{
    ViewBag.Title = "Kreiranje";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
<link href="../../Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />
<script src="../../Scripts/EditorHookup.js" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
      <table>
        <tr>
            <td class="col1">Uređaj</td>
            <td>
                @Html.EditorFor(model => model.Uredjaj)
                @Html.ValidationMessageFor(model => model.Uredjaj)
            </td>
        </tr>
        <tr>
            <td class="col1">Model</td>
            <td class="col2">
                @Html.DropDownList("id_model", String.Empty)
                @Html.ValidationMessageFor(model => model.id_model)
            </td>
        </tr>
        <tr>
            <td class="col1">IMEI</td>
            <td class="col2">
                @Html.EditorFor(model => model.IMEI)
                @Html.ValidationMessageFor(model => model.IMEI)
            </td>
        </tr>
        <tr>
            <td class="col1">SN</td>
            <td class="col2">
                @Html.EditorFor(model => model.SN)
                @Html.ValidationMessageFor(model => model.SN)
            </td>
        </tr>
        <tr>
            <td class="col1">Nabavljeno</td>
            <td class="col2">
                @Html.TextBoxFor(model => model.dat_nabavke, new { @class = "date-pick" })
                @Html.ValidationMessageFor(model => model.dat_nabavke)
            </td>
        </tr>
        <tr>
            <td class="col1">Ugovor</td>
            <td class="col2">
                @Html.CheckBoxFor(model => model.ugovor)
                @Html.ValidationMessageFor(model => model.ugovor)
            </td>
        </tr>

        <tr>
            <td class="col1">Trajanje ugovora</td>
            <td class="col2">
                @Html.EditorFor(model => model.trajanje_ugovora)
                @Html.ValidationMessageFor(model => model.trajanje_ugovora)
            </td>
        </tr>
        <tr>
            <td class="col1">Operater</td>
            <td class="col2">
                @Html.DropDownList("id_oper", String.Empty)
                @Html.ValidationMessageFor(model => model.id_oper)
            </td>
        </tr>
        <tr>
            <td class="col1">Datum ugovora</td>
            <td class="col2">
                @Html.TextBoxFor(model => model.dat_ugovora, new { @class = "date-pick" })
                @Html.ValidationMessageFor(model => model.dat_ugovora)
            </td>
        </tr>
    </table>

          <p>
            <input type="submit" value="Spremiti" />
        </p>
}


@section link
{
    @Html.ActionLink("Natrag", "Index")
}