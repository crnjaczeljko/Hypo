@using System.Web.Mvc.Html
@model Mobiteli.Models.Telefonija

@{
    ViewBag.Title = "Unos novog zaduženja";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("../../Content/ui.datepicker.css")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.min.js")" type="text/javascript"></script>
<link href="../../Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />
<script src="../../Scripts/EditorHookup.js" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <table >
        <tr>
            <td class="col1">
                @Html.LabelFor(model => model.id_zaposlenici, "Zaposlenici")
            </td>
            <td class="col2">
                @Html.DropDownList("id_zaposlenici", String.Empty)
                @Html.ValidationMessageFor(model => model.id_zaposlenici)
            </td>
        </tr>
        <tr>
            <td class="col1">Operator</td>
            <td> @Html.DropDownList("id_oper", String.Empty)
                @Html.ValidationMessageFor(model => model.id_oper)</td>
        </tr>
        <tr>
            <td class="col1">Broj</td>
            <td> @Html.EditorFor(model => model.broj_tel)
                @Html.ValidationMessageFor(model => model.broj_tel)</td>
        </tr>
        <tr>
            <td class="col1">Tip</td>
            <td>
                @Html.DropDownList("id_tip", String.Empty)
                @Html.ValidationMessageFor(model => model.id_tip)
            </td>
        </tr>
        <tr>
            <td class="col1">Govorna usluga</td>
            <td>@Html.CheckBoxFor(model => model.voice)
                @Html.ValidationMessageFor(model => model.voice)</td>
        </tr>
            <tr>
            <td class="col1">Data usluga</td>
            <td>@Html.CheckBoxFor(model => model.data)
                @Html.ValidationMessageFor(model => model.data)</td>
            </tr>  
            <tr>
            <td class="col1">Aktivirano</td>
                <td>@Html.TextBoxFor(model => model.dat_akt, new { @class = "date-pick" })
                    @Html.ValidationMessageFor(model => model.dat_deakt)
                 </td>

            </tr> 
        <tr>
            <td class="col1">Isključeno</td>
            <td>@Html.TextBoxFor(model => model.dat_deakt, new { @class = "date-pick" })
                @Html.ValidationMessageFor(model => model.dat_deakt)
            </td>

        </tr> 
        <tr>
            <td class="col1"> Limit na cijeli iznos</td>
            <td>
                @Html.CheckBoxFor(model => model.UkupnoLimit)
                @Html.ValidationMessageFor(model => model.UkupnoLimit)
            </td>
        </tr>
        <tr>
            <td class="col1">Iznos limita</td>
            <td>
                @Html.EditorFor(model => model.Limit)
                @Html.ValidationMessageFor(model => model.Limit)
            </td>
        </tr><tr>
            <td class="col1">Grupni račun</td>
            <td>
                @Html.CheckBoxFor(model => model.Grupni_racun)
                @Html.ValidationMessageFor(model => model.Grupni_racun)
            </td>
        </tr> 
<tr>
            <td class="col1">Broj grupe računa</td>
            <td>
                @Html.EditorFor(model => model.Grupa_racuna)
                @Html.ValidationMessageFor(model => model.Grupa_racuna)
            </td>
        </tr> 
    </table>
        <p>
            <input type="submit" value="Create" />
        </p>

}



