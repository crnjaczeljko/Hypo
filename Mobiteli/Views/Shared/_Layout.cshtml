<!DOCTYPE html>
<html>
    <head style="width: 100%">
        <title>@ViewBag.Title</title>
        <link href=@Url.Content("~/Content/Site.css") rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"> </script>

    </head>

    <body >
        
        <div class="page">
           
            <table style="background-color: #8496A6; width: 100%;">
                <tr style="border-style: none">
                    <td >
                        <div id="header">
                            <div id="logo">
                                <h1>&nbsp;@ViewBag.Title</h1>
                                korisnik: <strong>@User.Identity.Name</strong>!
                            </div> 
                        </div>
                    </td>
                    <td style="text-align: right">
                        <div id="menucontainer">
                            <ul id="menu">
                                @if (User.Identity.Name == "HYPO\\zeljkoc" || User.Identity.Name == "HYPO\\slavenf"
                                     || User.Identity.Name == "HYPO\\ivanb")
                                {
                                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                    <li>@Html.ActionLink("Fiksna Tel", "Index", "Fiksna")</li>
                                    <li>@Html.ActionLink("Zaduženja brojeva", "Index", "Phone")</li>
                                    <li>@Html.ActionLink("Zaduženja Uređaja", "Index", "DeviceUse")</li>
                                    <li>@Html.ActionLink("Uređaji", "Index", "Uredjaji")</li>
                                    <li>@Html.ActionLink("Razduženje", "Index", "Razduzenja")</li>                                    
                                    <li>@Html.ActionLink("Servis", "Index", "Servis")</li>
                                    <li>@Html.ActionLink("OD", "Index", "OD")</li>
                                    <li>@Html.ActionLink("Zaposlenici", "Index", "Zaposlenici")</li>
                                }
                            </ul>
                        </div>
                    </td>
                </tr>
            </table>
            <table style="width: 100%">
                <tr>
                    <td style="width: 100px; vertical-align: top;">
                        <div id = "linksbar" class="box">
                            @RenderSection("link",false)   
                        </div>
                    </td>
                    <td>
                    <div id="content" >
                            @RenderBody()
                    </div> 
                    </td>
                </tr>
            </table>          
              
         <div id="footer">
                    <hr/>
                    HYPO Alpe-Adria Bank dd Mostar   
                </div>
        </div>
    </body>
</html>