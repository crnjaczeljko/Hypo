@using DevExpress.Web.Mvc.UI
@model Mobiteli.Models.Razduzenje

@{
    ViewBag.Title = "Potvrda Razduzenje";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <table>
        @Html.HiddenFor(model => model.id_raz)
        <tr>
            <td class="col1">Zaposlenik</td>
            <td class="col2">
                @Html.DisplayFor(model => model.Telefonija.Zaposlenici.ImePrezime)
            </td>
        </tr>
        <tr>
            <td class="col1"> Broj telefona</td>
            <td class="col2">
                @Html.DisplayFor(model => model.Telefonija.broj_tel)
            </td>
        </tr>
        <tr>
            <td class="col1">Datum razduženja</td>
            <td class="col2">
                @Html.DisplayFor(model => model.datum_razduzenja)
            </td>
        </tr>
        <tr>
            <td class="col1">Opis</td>
            <td class="col2">
                @Html.DisplayFor(model => model.opis)
            </td>
        </tr>

    </table>
    <table>
                        <tr>
                            <td>
                                @Html.DevExpress().Button(
                                        settings =>
                                            {
                                                settings.Name = "btnUpdate";
                                                settings.ControlStyle.CssClass = "button";
                                                settings.Text = "Potvrda";
                                                settings.UseSubmitBehavior = true;
                                            }
                                        )
                                        .Render();
                            </td>
                            <td>
                                @Html.DevExpress().Button(
                                        settings =>
                                            {
                                                settings.Name = "btnCancel";
                                                settings.ControlStyle.CssClass = "button";
                                                settings.Text = "Odbiti";
                                                settings.UseSubmitBehavior = true;
                                            }
                                        )
                                        .Render();

                            </td>
                        </tr>
                    </table>  
}

@section link
{
    @Html.ActionLink("Natrag", "Index")
}
