@model Mobiteli.Models.OD

@{
    ViewBag.Title = "Ažuriranje";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <table>
        <tr>
            @Html.HiddenFor(model => model.id_od)
        </tr>
        <tr>
            <td class="col1">@Html.LabelFor(model => model.Naziv)</td>
            <td class="col2">
                @Html.EditorFor(model => model.Naziv, new { @class = "userName" })  
                @Html.ValidationMessageFor(model => model.Naziv)
            </td>
        </tr>
        <tr>
            <td class="col1">@Html.LabelFor(model => model.Oznaka)</td>
            <td class="col2">
                @Html.EditorFor(model => model.Oznaka)
                @Html.ValidationMessageFor(model => model.Oznaka)
            </td>
        </tr>
        <tr>
            <td class="col1">@Html.LabelFor(model => model.Adresa)</td>
            <td class="col2">
                @Html.EditorFor(model => model.Adresa)
                @Html.ValidationMessageFor(model => model.Adresa)
            </td>
        </tr>
        <tr>
            <td class="col1">Izvršni suradnik</td>
            <td class="col2">
                @Html.DropDownList("id_IzvSur", String.Empty)
                @Html.ValidationMessageFor(model => model.id_IzvSur)
            </td>
        </tr>
        <tr>
            <td class="col1">Direktor / voditelj OD</td>
            <td class="col2">
                @Html.DropDownList("id_voditelj", String.Empty)
                @Html.ValidationMessageFor(model => model.id_voditelj)
            </td>
        </tr>
        <tr>
            <td class="col1">Nadređeni OD</td>
            <td class="col2">
                @Html.DropDownList("id_odnad", String.Empty)
                @Html.ValidationMessageFor(model => model.id_odnad)
            </td>
        </tr>
        <tr>
        <td></td>
             <td style="border-style: none; text-align: right;">
                 <div style="font-size: x-small">
                     <input type="submit" value="" style="background-position: center bottom; background-image: url('http://localhost:24541/Images/Accept.png'); background-repeat: no-repeat; width: 100px; height: 32px;" />
            @*        <a href='@Url.Action("Edit", new { id = Model.id_od })'>
                     <img src="../../Images/back-icon.png" alt="Natrag" style="border-style: none" />
                 </a> *@ 
                 </div>
                 </td>
        </tr>
    </table>  

}


@section link
{
      @Html.ActionLink("Natrag", "Index")
}